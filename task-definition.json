{
  "family": "myfirstmovie",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::YOUR_ACCOUNT_ID:role/ecsTaskRole",
  "containerDefinitions": [
    {
      "name": "myfirstmovie",
      "image": "YOUR_ACCOUNT_ID.dkr.ecr.us-east-1.amazonaws.com/myfirstmovie:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DB_HOST",
          "value": "myfirstmovie-db.xxxxxx.us-east-1.rds.amazonaws.com"
        },
        {
          "name": "DB_DATABASE",
          "value": "myfirstm_live"
        },
        {
          "name": "DB_USERNAME",
          "value": "admin"
        },
        {
          "name": "DB_PASSWORD",
          "value": "YourStrongPassword123!"
        },
        {
          "name": "CCAV_WORKING_KEY",
          "value": "A04D90250BA9425B0CB0D7AF5F92B9CA"
        },
        {
          "name": "CCAV_ACCESS_CODE",
          "value": "AVBL71EF28AQ31LBQA"
        },
        {
          "name": "CCAV_MERCHANT_ID",
          "value": "137320"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/myfirstmovie",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
