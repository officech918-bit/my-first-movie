RewriteEngine On
RewriteBase /myfirstmovie/admin/

# Disable directory listing
Options -Indexes

# Disable server signature
ServerSignature Off

# Restrict access to sensitive files
<Files ~ "^\.">
    Require all denied
</Files>

<FilesMatch "^(config|database|backup|sql|log|tmp|cache|\.env)\.*$">
    Require all denied
</FilesMatch>

# Block access to backup and log files
<FilesMatch "\.(bak|backup|old|tmp|log|sql|gz|tar|zip)$">
    Require all denied
</FilesMatch>

# Allow existing files and directories to be served directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^ - [L]

# Route all other requests through the admin router
RewriteRule ^ router.php [L]

# Enhanced security headers
<IfModule mod_headers.c>
  # Prevent MIME-type sniffing
  Header always set X-Content-Type-Options "nosniff"
  
  # Prevent clickjacking
  Header always set X-Frame-Options "SAMEORIGIN"
  
  # Control referrer information
  Header always set Referrer-Policy "strict-origin-when-cross-origin"
  
  # Enable XSS protection
  Header always set X-XSS-Protection "1; mode=block"
  
  # Force HTTPS (if SSL is available)
  # Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"
  
  # Content Security Policy (restrictive for admin)
  Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; font-src 'self'; connect-src 'self'; frame-ancestors 'self';"
  
  # Remove server information
  Header always unset Server
  Header always unset X-Powered-By
</IfModule>

# IP Whitelist (optional - uncomment and add your IP)
# <RequireIP 192.168.1.100>
# <RequireIP 203.0.113.45>

# Rate limiting (if mod_evasive is available)
# <IfModule mod_evasive.c>
#   DOSHashTableSize 3097
#   DOSPageCount 2
#   DOSSiteCount 50
#   DOSPageInterval 1
#   DOSSiteInterval 1
#   DOSBlockingPeriod 10
# </IfModule>

# File upload size limits
<IfModule mod_php.c>
  php_value upload_max_filesize 10M
  php_value post_max_size 10M
  php_value max_execution_time 60
  php_value memory_limit 128M
</IfModule>

# Disable PHP errors in production
php_flag display_errors Off
php_flag log_errors On
php_value error_log /var/log/apache2/admin_errors.log

# Block common attack patterns
<IfModule mod_rewrite.c>
  # Block SQL injection attempts
  RewriteCond %{QUERY_STRING} union.*select [NC,OR]
  RewriteCond %{QUERY_STRING} concat.*select [NC,OR]
  RewriteCond %{QUERY_STRING} insert.*select [NC,OR]
  RewriteCond %{QUERY_STRING} delete.*from [NC,OR]
  RewriteCond %{QUERY_STRING} drop.*table [NC,OR]
  RewriteCond %{QUERY_STRING} alter.*table [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # Block XSS attempts
  RewriteCond %{QUERY_STRING} (<|%3C).*script.*(>|%3E) [NC,OR]
  RewriteCond %{QUERY_STRING} (<|%3C).*iframe.*(>|%3E) [NC,OR]
  RewriteCond %{QUERY_STRING} (<|%3C).*object.*(>|%3E) [NC,OR]
  RewriteCond %{QUERY_STRING} (<|%3C).*embed.*(>|%3E) [NC]
  RewriteRule ^(.*)$ - [F,L]
  
  # Block path traversal attempts
  RewriteCond %{REQUEST_URI} \.\./ [NC,OR]
  RewriteCond %{REQUEST_URI} \.\.\/ [NC]
  RewriteRule ^(.*)$ - [F,L]
</IfModule>

# Restrict access by time (optional - uncomment to enable)
# <IfModule mod_time.c>
#   # Allow access only during business hours (9 AM - 6 PM)
#   RewriteCond %{TIME_HOUR} <9 [OR]
#   RewriteCond %{TIME_HOUR} >18
#   RewriteRule ^(.*)$ - [F,L]
# </IfModule>

# Custom error pages
ErrorDocument 403 "Access Denied"
ErrorDocument 404 "Page Not Found"
ErrorDocument 500 "Internal Server Error"